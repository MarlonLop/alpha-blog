<% if @article.errors.any? %>
  <h3>The following errors prevented the article creation</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for @article do |i| %>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= i.label :title %>
        </div>
        <div class="col-sm-8">
          <%= i.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= i.label :body %>
        </div>
        <div class="col-sm-6">
          <%= i.text_area :description, rows: 10, class: "form-control", placeholder: "Body", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= i.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-4 offset-sm-4">
      <%= link_to "[ Cancel and return ]", articles_path %>
    </div>
  </div>
</div>